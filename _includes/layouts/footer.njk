{% set navigationData = translations[page.lang].navigation %}
{% set keywords = translations[page.lang].keywords %}

<footer class="site-footer">
    <div class="container pt-5">
        {# About #}
        <div class="row">
            <div class="col-12">
                <div style="width: 200px; height: 30px;">
                    {% image "img/logo.png", "Inklusio logo", "400, 800, 1200" %}
                </div>
            </div>
        </div>

        <div class="row mt-2 d-flex flex-row flex-wrap justify-content-between">
            <div class="col-sm-12 col-md-4 col-xl-3 my-4">
                <div class="font-weight-bold fs-5">{{ keywords.contact }}</div>
                <div class="mt-4">
                    Inklusio<br>
                    C.A. Olesens Gade 4
                    <br>9000 Aalborg

                    <div>
                        {{keywords.phone}}
                        <a
                            class="text-decoration-underline text-light"
                            href="tel: +45 26 34 34 55"
                        >
                            +45 26 34 34 55
                        </a>
                    </div>
    
                    <div>
                        <a
                        class="text-decoration-underline text-light"
                        href="mailto:ses@inklusio.dk"
                    >
                        ses@inklusio.dk
                    </a>
                    </div>
    
                    <div class="mt-4">
                        Inklusio ApS<br>
                        CVR: 41066784<br>
                        <a class="text-decoration-underline text-white" {% if "/persondata.html" == page.url %} aria-current="page"{% endif %} href="/Persondata/">{{ keywords.privacy_policy }}</a>
                    </div>
                </div>
            </div>
    
            {# Navigation #}
            <div class="col-sm-12 col-md-4 col-xl-3 my-4">
                <div class="font-weight-bold fs-5">{{ keywords.navigations }}</div>
                <div class="mt-4">
                    {% for _, navObj in navigationData %}
                        <div>
                            <a class="text-decoration-underline text-white" {% if navObj.url == page.url %} aria-current="page"{% endif %} href="{{ navObj.url }}">{{ navObj.text }}</a>
                        </div>
                    {% endfor %}
                </div>
            </div>
    
            {# Find Us #}
            <div class="col-sm-12 col-md-4 col-xl-3 my-4">
                <div class="font-weight-bold fs-5">{{ keywords.find_us }}</div>
                <div class="mt-4">
                    <a href="https://www.linkedin.com/company/inklusio" target="_blank" class="text-decoration-underline text-white">
                        LinkedIn
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 mt-4 text-gray-500 font-medium text-sm text-center">
                <hr class="border-top border-gray-700">
                <div class="pt-1 pb-3">All rights reserved Â© 2023 Inklusio</div>
            </div>
        </div>
    </div>
</footer>
