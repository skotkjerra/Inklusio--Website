{% set keywords = translations[page.lang].keywords %}

<ul class="list-group">
{% for post in postslist | postListUrlLanguageFilter(page.lang) | reverse %}
  <li class="list-group-item p-4 border-0">
    <div class="d-flex w-100 justify-content-between">
      <h3 class="mb-1 fs-5 flex-grow-1"><a class="text-decoration-none" href="{{ post.url | url }}">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a></h3>
      <small class="flex-shrink-1 white-space-nowrap"><time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></small>
    </div>
    <p class="m-0 fs-5">
      <span class="sr-only">{{ keywords.tags_for_article }}</span>
      {% for tag in post.data.tags %}
        {%- if collections.tagList.indexOf(tag) != -1 -%}
        {% if page.lang != 'da' %}
          {% set tagUrl %}/{{page.lang}}/tags/{{ tag }}/{% endset %}
        {% else %}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}        
        {% endif %}
        <a href="{{ tagUrl | url }}" class="badge badge-dark text-decoration-none">{{ tag }}</a>
        {%- endif -%}
    {% endfor %}
    </p>
  </li>
{% endfor %}
</ul>
